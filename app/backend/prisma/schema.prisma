generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTH MODELS (Better Auth Integration)
// ============================================

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
  accounts      Account[]
  profile       UserProfile?

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ============================================
// ENUMS
// ============================================

enum UserType {
  PENDING
  COMPANY
  BD_PARTNER_INDIVIDUAL
  BD_PARTNER_ORGANIZATION
  ADMIN
}

enum ProfileStatus {
  DRAFT
  PENDING_APPROVAL      // Submitted for admin review
  APPROVED              // Admin approved, visible on platform
  VERIFIED              // Enhanced verification level
  REJECTED              // Admin rejected
  SUSPENDED             // Admin suspended
}

enum ProductType {
  PRODUCT
  SERVICE
}

enum ProductStatus {
  DRAFT
  PENDING_APPROVAL      // Submitted for admin review
  APPROVED              // Admin approved, visible to BD partners
  REJECTED              // Admin rejected
  INACTIVE              // Company deactivated
}

enum PaymentModel {
  COMMISSION_BASED
  FIXED_FEE
  REVENUE_SHARE
  HYBRID
  RETAINER
}

enum SalesSupportMaterialType {
  BROCHURE_DATASHEET
  DEMO_VIDEO
  BUSINESS_USECASE
  PITCH_DECK
  EMAIL_TEMPLATE
  COLD_CALL_SCRIPT
  OBJECTION_HANDLING_GUIDE
  COMPETITOR_COMPARISON
  PRICING_SHEET
}

enum ApplicationStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  WITHDRAWN
}

enum EOIStatus {
  PENDING               // Submitted, awaiting response
  ACCEPTED              // Recipient accepted the EOI
  REJECTED              // Recipient rejected the EOI
  WITHDRAWN             // Sender withdrew the EOI
  EXPIRED               // EOI expired without response
}

enum EOIInitiator {
  BD_PARTNER            // BD Partner sent EOI to Company
  COMPANY               // Company sent EOI to BD Partner
}

enum EnglishFluency {
  BASIC
  INTERMEDIATE
  FLUENT
}

enum EmployeeCount {
  ONE_TO_TEN
  ELEVEN_TO_FIFTY
  FIFTY_ONE_TO_TWO_HUNDRED
  TWO_HUNDRED_ONE_TO_FIVE_HUNDRED
  FIVE_HUNDRED_ONE_TO_THOUSAND
  OVER_THOUSAND
}

// ============================================
// FLEXIBLE LIST OF VALUES SYSTEM
// ============================================

model IndustryCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  industrySubCategories IndustrySubCategory[]
  profileIndustries ProfileIndustry[]
  productTargetCustomerIndustries ProductTargetCustomerIndustry[]

  @@map("industry_category")
}

model IndustrySubCategory {
  id          String              @id @default(cuid())
  name        String
  categoryId  String
  category    IndustryCategory    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  industrySpecialisations IndustrySpecialisation[]
  profileIndustries ProfileIndustry[]
  productTargetCustomerIndustries ProductTargetCustomerIndustry[]

  @@unique([name, categoryId])
  @@map("industry_sub_category")
}

model IndustrySpecialisation {
  id              String                @id @default(cuid())
  name            String
  subCategoryId   String
  subCategory     IndustrySubCategory   @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  profileIndustries ProfileIndustry[]
  productPreferredBDProfiles ProductPreferredBDProfile[]

  @@unique([name, subCategoryId])
  @@map("industry_specialisation")
}

model EngagementModel {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profileEngagements ProfileEngagement[]
  products Product[]

  @@map("engagement_model")
}

model IncentiveMethod {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("incentive_method")
}

model YearsOfExperience {
  id        String   @id @default(cuid())
  range     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bdpartnerIndividualProfiles bdpartnerIndividualProfile[]
  bdpartnerOrganizationProfiles BDPartnerOrganizationProfile[]
  products Product[]

  @@map("years_of_experience")
}

model BusinessStructure {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bdpartnerOrganizationProfiles BDPartnerOrganizationProfile[]

  @@map("buisness_structure")
}

model ToolPlatform {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  profileTools ProfileTool[]

  @@map("tool_platform")
}

model Certification {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profileCertifications ProfileCertification[]
  productPreferredCertifications ProductPreferredCertification[]

  @@map("certification")
}

// ============================================
// USER MODELS
// ============================================

model UserProfile {
  id        String          @id @default(cuid())
  userId    String          @unique
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      UserType
  status    ProfileStatus   @default(DRAFT)

  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  companyProfile CompanyProfile?
  bdpartnerIndividualProfile bdpartnerIndividualProfile?
  bdpartnerOrganizationProfile BDPartnerOrganizationProfile?

  @@index([userId])
  @@map("user_profile")
}

model CommonCompanyDetails {
  id                     String   @id @default(cuid())

  // Basic Details
  companyName             String
  businessRegNumber       String   @unique
  registeredBuisnessName  String?
  countryOfRegistration   String
  registeredAddress       String 

  // Contract Details
  contactPersonName        String
  contactPersonDesignation String
  contactPersonEmail       String  @unique
  contactPersonPhone       String

  // Additional Details
  websiteURL              String?
  linkedInURL             String?
  logoURL                 String?
  profileDeckURL          String?
  yearOfEstablishment     Int?
  description             String?   @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyProfile CompanyProfile?
  bdpartnerOrganizationProfile BDPartnerOrganizationProfile?

  @@map("common_organisation_details")
}

model CompanyProfile {
  id            String   @id @default(cuid())
  userProfileId String   @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  commonDetailsId String @unique
  commonDetails   CommonCompanyDetails @relation(fields: [commonDetailsId], references: [id], onDelete: Cascade)

  ndaAgreed           Boolean  @default(false)
  headOfficeLocation  String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profileIndustries ProfileIndustry[]
  profileEngagements ProfileEngagement[]
  profileTools ProfileTool[]
  profileCertifications ProfileCertification[]
  products Product[]

  @@index([commonDetailsId])
  @@index([userProfileId])
  @@map("company_profile")
}

model bdpartnerIndividualProfile {
  id            String   @id @default(cuid())
  userProfileId String   @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  // 1. Personal Details
  firstName         String
  lastName          String
  email             String  @unique
  phone             String

  country           String
  countryIso2Code   String
  stateOrProvince   String
  city              String

  ndaAgreed         Boolean  @default(false)

  // 2. Professional Details
  yearsOfExperienceId         String
  yearsOfExperience           YearsOfExperience @relation(fields: [yearsOfExperienceId], references: [id], onDelete: Restrict)
  fluencyInEnglish            EnglishFluency?
  referralNetworkDescription  String? @db.Text
  availabilityHoursPerWeek    Decimal?

  // 3. Additional Details
  linkedInURL   String?
  resumeURL     String?
  idProofURL    String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profileIndustries ProfileIndustry[]
  profileEngagements ProfileEngagement[]
  profileTools ProfileTool[]
  profileCertifications ProfileCertification[]
  expressionOfInterests ExpressionOfInterest[]

  @@index([userProfileId])
  @@map("bd_partner_individual_profile")
}

model BDPartnerOrganizationProfile {
  id            String   @id @default(cuid())
  userProfileId String   @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  // 1. Organization Details
  commonDetailsId String @unique
  commonDetails   CommonCompanyDetails @relation(fields: [commonDetailsId], references: [id], onDelete: Cascade)

  // 2. Professional Details
  businessStructureId         String
  businessStructure           BusinessStructure @relation(fields: [businessStructureId], references: [id], onDelete: Restrict)
  employeeCount               EmployeeCount
  yearsOfExperienceId         String
  yearsOfExperience           YearsOfExperience @relation(fields: [yearsOfExperienceId], references: [id], onDelete: Restrict)
  availabilityHoursPerWeek    Decimal?
  referralNetworkDescription  String? @db.Text
  existingClientBase          String? @db.Text

  ndaAgreed                   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profileIndustries ProfileIndustry[]
  profileEngagements ProfileEngagement[]
  profileTools ProfileTool[]
  profileCertifications ProfileCertification[]
  expressionOfInterests ExpressionOfInterest[]

  @@index([commonDetailsId])
  @@index([userProfileId])
  @@map("bd_partner_organization_profile")
}

// ============================================
// POLYMORPHIC JUNCTION TABLES
// ============================================

model ProfileIndustry {
  id                String   @id @default(cuid())
  
  // Polymorphic Relation Fields
  companyProfileId            String?
  companyProfile              CompanyProfile? @relation(fields: [companyProfileId], references: [id], onDelete: Cascade)
  bdpartnerIndividualProfileId String?
  bdpartnerIndividualProfile   bdpartnerIndividualProfile? @relation(fields: [bdpartnerIndividualProfileId], references: [id], onDelete: Cascade)
  bdpartnerOrganizationProfileId String?
  bdpartnerOrganizationProfile   BDPartnerOrganizationProfile? @relation(fields: [bdpartnerOrganizationProfileId], references: [id], onDelete: Cascade)

  // Industry references 
  industryCategoryId        String?
  industryCategory          IndustryCategory? @relation(fields: [industryCategoryId], references: [id], onDelete: Cascade)
  industrySubCategoryId     String?
  industrySubCategory       IndustrySubCategory? @relation(fields: [industrySubCategoryId], references: [id], onDelete: Cascade)
  industrySpecialisationId  String?
  industrySpecialisation    IndustrySpecialisation? @relation(fields: [industrySpecialisationId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([companyProfileId, industryCategoryId, industrySubCategoryId, industrySpecialisationId], name: "company_industry_unique")
  @@unique([bdpartnerIndividualProfileId, industryCategoryId, industrySubCategoryId, industrySpecialisationId], name: "bd_ind_industry_unique")
  @@unique([bdpartnerOrganizationProfileId, industryCategoryId, industrySubCategoryId, industrySpecialisationId], name: "bd_org_industry_unique")
  @@index([companyProfileId])
  @@index([bdpartnerIndividualProfileId])
  @@index([bdpartnerOrganizationProfileId])
  @@map("profile_industry")
}

model ProfileEngagement {
  id                             String   @id @default(cuid())
  
  // Polymorphic references
  companyProfileId                String?
  companyProfile                  CompanyProfile? @relation(fields: [companyProfileId], references: [id], onDelete: Cascade)
  bdpartnerIndividualProfileId    String?
  bdpartnerIndividualProfile      bdpartnerIndividualProfile? @relation(fields: [bdpartnerIndividualProfileId], references: [id], onDelete: Cascade)
  bdpartnerOrganizationProfileId  String?
  bdpartnerOrganizationProfile    BDPartnerOrganizationProfile? @relation(fields: [bdpartnerOrganizationProfileId], references: [id], onDelete: Cascade)
  
  engagementModelId       String
  engagementModel         EngagementModel @relation(fields: [engagementModelId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyProfileId, engagementModelId], name: "company_engagement_unique")
  @@unique([bdpartnerIndividualProfileId, engagementModelId], name: "bd_ind_engagement_unique")
  @@unique([bdpartnerOrganizationProfileId, engagementModelId], name: "bd_org_engagement_unique")
  @@index([companyProfileId])
  @@index([bdpartnerIndividualProfileId])
  @@index([bdpartnerOrganizationProfileId])
  @@map("profile_engagement")
}

model ProfileTool {
  id                             String   @id @default(cuid())
  
  // Polymorphic references 
  companyProfileId                String?
  companyProfile                  CompanyProfile? @relation(fields: [companyProfileId], references: [id], onDelete: Cascade)
  bdpartnerIndividualProfileId    String?
  bdpartnerIndividualProfile      bdpartnerIndividualProfile? @relation(fields: [bdpartnerIndividualProfileId], references: [id], onDelete: Cascade)
  bdpartnerOrganizationProfileId  String?
  bdpartnerOrganizationProfile    BDPartnerOrganizationProfile? @relation(fields: [bdpartnerOrganizationProfileId], references: [id], onDelete: Cascade)
  
  toolPlatformId          String
  toolPlatform            ToolPlatform @relation(fields: [toolPlatformId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyProfileId, toolPlatformId], name: "company_tool_unique")
  @@unique([bdpartnerIndividualProfileId, toolPlatformId], name: "bd_ind_tool_unique")
  @@unique([bdpartnerOrganizationProfileId, toolPlatformId], name: "bd_org_tool_unique")
  @@index([companyProfileId])
  @@index([bdpartnerIndividualProfileId])
  @@index([bdpartnerOrganizationProfileId])
  @@map("profile_tool")
}

model ProfileCertification {
  id                             String   @id @default(cuid())
  
  // Polymorphic references - exactly ONE must be populated
  companyProfileId                String?
  companyProfile                  CompanyProfile? @relation(fields: [companyProfileId], references: [id], onDelete: Cascade)
  bdpartnerIndividualProfileId    String?
  bdpartnerIndividualProfile      bdpartnerIndividualProfile? @relation(fields: [bdpartnerIndividualProfileId], references: [id], onDelete: Cascade)
  bdpartnerOrganizationProfileId  String?
  bdpartnerOrganizationProfile    BDPartnerOrganizationProfile? @relation(fields: [bdpartnerOrganizationProfileId], references: [id], onDelete: Cascade)
  
  certificationId         String
  certification           Certification @relation(fields: [certificationId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyProfileId, certificationId], name: "company_cert_unique")
  @@unique([bdpartnerIndividualProfileId, certificationId], name: "bd_ind_cert_unique")
  @@unique([bdpartnerOrganizationProfileId, certificationId], name: "bd_org_cert_unique")
  @@index([companyProfileId])
  @@index([bdpartnerIndividualProfileId])
  @@index([bdpartnerOrganizationProfileId])
  @@map("profile_certification")
}

// ============================================
// PRODUCT/SERVICE MODELS
// ============================================

model Product {
  id                String   @id @default(cuid())
  companyProfileId  String
  companyProfile    CompanyProfile @relation(fields: [companyProfileId], references: [id], onDelete: Cascade)

  // 1. Product/Service Info
  name              String
  type              ProductType
  status            ProductStatus   @default(DRAFT)
  shortDescription       String   
  detailedDescription    String     @db.Text
  imageURL         String?
  
  // 2. Commercial Details
  paymentModel                  PaymentModel
  indicativeIncentive           String?
  preferredYearsOfExperienceId  String?
  preferredYearsOfExperience    YearsOfExperience? @relation(fields: [preferredYearsOfExperienceId], references: [id], onDelete: Restrict)
  engagementMethodId            String?
  engagementMethod              EngagementModel? @relation(fields: [engagementMethodId], references: [id], onDelete: Cascade)
  salesTrainingAvailable        Boolean   @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  productTargetCustomerIndustries ProductTargetCustomerIndustry[]
  productTargetRegions ProductTargetRegion[]
  productSalesSupportMaterials ProductSalesSupportMaterial[]
  productPreferredBDProfiles ProductPreferredBDProfile[]
  productPreferredCertifications ProductPreferredCertification[]
  expressionOfInterests ExpressionOfInterest[]
  
  @@index([companyProfileId])
  @@index([status])
  @@map("product")
}

// ============================================
// PRODUCT JUNCTION TABLES
// ============================================

model ProductTargetCustomerIndustry {
  id                       String   @id @default(cuid())
  productId                String
  product                  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  industryCategoryId       String?
  industryCategory         IndustryCategory? @relation(fields: [industryCategoryId], references: [id], onDelete: Cascade)
  industrySubCategoryId    String?
  industrySubCategory      IndustrySubCategory? @relation(fields: [industrySubCategoryId], references: [id], onDelete: Cascade)
  
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt

  @@unique([productId, industryCategoryId, industrySubCategoryId])
  @@index([productId])
  @@map("product_target_customer_industry")
}

model ProductTargetRegion {
  id                String   @id @default(cuid())
  productId         String
  product           Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  country           String
  countryIso2Code   String
  stateOrProvince   String?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([productId, countryIso2Code])
  @@index([productId])
  @@map("product_target_region")
}


model ProductSalesSupportMaterial {
  id                String                     @id @default(cuid())
  productId         String
  product           Product                    @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  materialType      SalesSupportMaterialType
  title             String
  fileURL           String?
  linkURL           String?
  description       String?                    @db.Text
  
  visibleAfterEOI   Boolean                    @default(true)
  
  createdAt         DateTime                   @default(now())
  updatedAt         DateTime                   @updatedAt

  @@index([productId])
  @@index([materialType])
  @@map("product_sales_support_material")
}

model ProductPreferredBDProfile {
  id                       String                  @id @default(cuid())
  productId                String
  product                  Product                 @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  industrySpecialisationId String
  industrySpecialisation   IndustrySpecialisation  @relation(fields: [industrySpecialisationId], references: [id], onDelete: Cascade)
  
  createdAt                DateTime                @default(now())
  updatedAt                DateTime                @updatedAt

  @@unique([productId, industrySpecialisationId])
  @@index([productId])
  @@map("product_preferred_bd_profile")
}

model ProductPreferredCertification {
  id                String         @id @default(cuid())
  productId         String
  product           Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  certificationId   String
  certification     Certification  @relation(fields: [certificationId], references: [id], onDelete: Cascade)
  
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  @@unique([productId, certificationId])
  @@index([productId])
  @@map("product_preferred_certification")
}

// ============================================
// EXPRESSION OF INTEREST MODEL
// ============================================

model ExpressionOfInterest {
  id String @id @default(cuid())
  
  // Who is expressing interest
  bdpartnerIndividualProfileId String?
  bdpartnerIndividualProfile bdpartnerIndividualProfile? @relation(fields: [bdpartnerIndividualProfileId], references: [id], onDelete: Cascade)
  
  bdPartnerOrganizationProfileId String?
  bdPartnerOrganizationProfile BDPartnerOrganizationProfile? @relation(fields: [bdPartnerOrganizationProfileId], references: [id], onDelete: Cascade)
  
  // What they're interested in
  productId String
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  // EOI Details
  initiator EOIInitiator // BD_PARTNER or COMPANY
  status EOIStatus @default(PENDING)
  message String? @db.Text
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime?
  respondedAt DateTime?
  
  @@index([productId])
  @@index([bdpartnerIndividualProfileId])
  @@index([bdPartnerOrganizationProfileId])
  @@index([status])
  @@map("expression_of_interest")
}