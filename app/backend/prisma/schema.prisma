generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTH MODELS (Better Auth Integration)
// ============================================

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
  accounts      Account[]
  profile       UserProfile?

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ============================================
// ENUMS
// ============================================

enum UserType {
  PENDING
  COMPANY
  BD_PARTNER_INDIVIDUAL
  BD_PARTNER_ORGANIZATION
  ADMIN
}

enum ProfileStatus {
  DRAFT
  PENDING_APPROVAL      // Submitted for admin review
  APPROVED              // Admin approved, visible on platform
  VERIFIED              // Enhanced verification level
  REJECTED              // Admin rejected
  SUSPENDED             // Admin suspended
}

enum ProductStatus {
  DRAFT
  PENDING_APPROVAL      // Submitted for admin review
  APPROVED              // Admin approved, visible to BD partners
  REJECTED              // Admin rejected
  INACTIVE              // Company deactivated
}

enum ApplicationStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  WITHDRAWN
}

enum EOIStatus {
  PENDING               // Submitted, awaiting response
  ACCEPTED              // Recipient accepted the EOI
  REJECTED              // Recipient rejected the EOI
  WITHDRAWN             // Sender withdrew the EOI
  EXPIRED               // EOI expired without response
}

enum EOIInitiator {
  BD_PARTNER            // BD Partner sent EOI to Company
  COMPANY               // Company sent EOI to BD Partner
}

enum EnglishFluency {
  BASIC
  INTERMEDIATE
  FLUENT
}

enum EmployeeCount {
  ONE_TO_TEN
  ELEVEN_TO_FIFTY
  FIFTY_ONE_TO_TWO_HUNDRED
  TWO_HUNDRED_ONE_TO_FIVE_HUNDRED
  FIVE_HUNDRED_ONE_TO_THOUSAND
  OVER_THOUSAND
}

// ============================================
// FLEXIBLE LIST OF VALUES SYSTEM
// ============================================

model IndustryCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  industrySubCategories IndustrySubCategory[]

  @@map("industry_category")
}

model IndustrySubCategory {
  id          String              @id @default(cuid())
  name        String
  categoryId  String
  category    IndustryCategory    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  industrySpecialisations IndustrySpecialisation[]

  @@unique([name, categoryId])
  @@map("industry_sub_category")
}

model IndustrySpecialisation {
  id              String                @id @default(cuid())
  name            String
  subCategoryId   String
  subCategory     IndustrySubCategory   @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  @@unique([name, subCategoryId])
  @@map("industry_specialisation")
}

model EngagementModel {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("engagement_model")
}

model IncentiveMethod {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("incentive_method")
}

model YearsOfExperience {
  id        String   @id @default(cuid())
  range     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("years_of_experience")
  bdpartnerIndividualProfiles BDPartnerIndividualProfile[]
  bdpartnerOrganizationProfiles BDPartnerOrganizationProfile[]
}

model BuisnessStructure {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("buisness_structure")
  bdpartnerOrganizationProfiles BDPartnerOrganizationProfile[]
}

model ToolPlatform {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tool_platform")
}

model Certification {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("certification")
}

// ============================================
// GEOGRAPHY MODELS
// ============================================

model Country {
  id        String   @id @default(cuid())

  name        String    @unique
  iso2Code    String    @unique
  iso3Code    String    @unique
  numericCode String?   @unique
  phoneCode   String?   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stateOrProvinces StateOrProvince[]
  commonCompanyDetails CommonCompanyDetails[]
  bdpartnerIndividualProfiles BDPartnerIndividualProfile[]
  
  @@map("country")
}

model StateOrProvince {
  id        String   @id @default(cuid())

  name          String
  abbreviation  String

  countryId String
  country   Country  @relation(fields: [countryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, countryId])
  @@map("state_or_province")
  bdpartnerIndividualProfiles BDPartnerIndividualProfile[]
}


// ============================================
// USER MODELS
// ============================================

model UserProfile {
  id        String          @id @default(cuid())
  userId    String          @unique
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      UserType
  status    ProfileStatus   @default(DRAFT)

  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  companyProfile CompanyProfile?
  bdpartnerIndividualProfile BDPartnerIndividualProfile?
  bdpartnerOrganizationProfile BDPartnerOrganizationProfile?

  @@index([userId])
  @@map("user_profile")
}

model CommonCompanyDetails {
  id                     String   @id @default(cuid())

  // Basic Details
  companyName             String
  businessRegNumber       String   @unique
  registeredBuisnessName  String?
  countryOfRegistrationId String
  countryOfRegistration   Country  @relation(fields: [countryOfRegistrationId], references: [id], onDelete: Restrict)
  registeredAddress       String 

  // Contract Details
  contactPersonName        String
  contactPersonDesignation String
  contactPersonEmail       String  @unique
  contactPersonPhone       String

  // Additional Details
  websiteURL              String?
  linkedInURL             String?
  logoURL                 String?
  profileDeckURL          String?
  yearOfEstablishment     Int?
  description             String?   @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyProfile CompanyProfile?
  bdpartnerOrganizationProfile BDPartnerOrganizationProfile?

  @@map("common_organisation_details")
}

model CompanyProfile {
  id            String   @id @default(cuid())
  userProfileId String   @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  commonDetailsId String @unique
  commonDetails   CommonCompanyDetails @relation(fields: [commonDetailsId], references: [id], onDelete: Cascade)

  ndaAgreed           Boolean  @default(false)
  headOfficeLocation  String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([commonDetailsId])
  @@index([userProfileId])
  @@map("company_profile")
}

model BDPartnerIndividualProfile {
  id            String   @id @default(cuid())
  userProfileId String   @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  // 1. Personal Details
  firstName         String
  lastName          String
  email             String  @unique
  phone             String

  countryId         String
  country           Country  @relation(fields: [countryId], references: [id], onDelete: Restrict)
  stateOrProvinceId String
  stateOrProvince   StateOrProvince? @relation(fields: [stateOrProvinceId], references: [id], onDelete: Restrict)
  city              String

  ndaAgreed         Boolean  @default(false)

  // 2. Professional Details
  yearsOfExperienceId         String
  yearsOfExperience           YearsOfExperience @relation(fields: [yearsOfExperienceId], references: [id], onDelete: Restrict)
  fluencyInEnglish            EnglishFluency?
  referralNetworkDescription  String? @db.Text
  availabilityHoursPerWeek    Decimal?

  // 3. Additional Details
  linkedInURL   String?
  resumeURL     String?
  idProofURL    String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userProfileId])
  @@map("bd_partner_individual_profile")
}

model BDPartnerOrganizationProfile {
  id            String   @id @default(cuid())
  userProfileId String   @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  // 1. Organization Details
  commonDetailsId String @unique
  commonDetails   CommonCompanyDetails @relation(fields: [commonDetailsId], references: [id], onDelete: Cascade)

  // 2. Professional Details
  buisnessStructureId         String
  buisnessStructure           BuisnessStructure @relation(fields: [buisnessStructureId], references: [id], onDelete: Restrict)
  employeeCount               EmployeeCount
  yearsOfExperienceId         String
  yearsOfExperience           YearsOfExperience @relation(fields: [yearsOfExperienceId], references: [id], onDelete: Restrict)
  availabilityHoursPerWeek    Decimal?
  referralNetworkDescription  String? @db.Text
  existingClientBase          String? @db.Text

  ndaAgreed                   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([commonDetailsId])
  @@index([userProfileId])
  @@map("bd_partner_organization_profile")
}

